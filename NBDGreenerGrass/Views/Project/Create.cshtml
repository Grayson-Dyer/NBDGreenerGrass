@model NBDGreenerGrass.Models.Project

@{
    ViewData["Title"] = "Create Project";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1>Create Project</h1>
        </div>
    </div>
    <hr />
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-md-6">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-4">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Created" class="control-label"></label>
                <input asp-for="Created" class="form-control" />
                <span asp-validation-for="Created" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Client" class="control-label"></label>
                <select asp-for="Client" class="form-control" asp-items="ViewBag.ClientID"></select> 
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6">
                <label asp-for="Street" class="control-label"></label>
                <input asp-for="Street" class="form-control" />
                <span asp-validation-for="Street" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="City" class="control-label"></label>
                <select asp-for="City" class="form-control" asp-items="ViewBag.ClientID"></select>
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6">
                <label asp-for="Province" class="control-label"></label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Postal" class="control-label"></label>
                <input asp-for="Postal" class="form-control" />
                <span asp-validation-for="Postal" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-12">
                <label asp-for="Desc" class="control-label"></label>
                <textarea asp-for="Desc" class="form-control"></textarea>
                <span asp-validation-for="Desc" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="row form-group">
            <div class="col-md-12 text-center">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </form>
    <div class="row">
        <div class="col-md-12 text-center">
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
