@model NBDGreenerGrass.Models.Project

<br />
<h2 class="text-center">Create Project</h2> <!-- Centered Heading -->

<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <!-- Project Details Section -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Start" class="control-label"></label>
                        <input asp-for="Start" class="form-control" />
                        <span asp-validation-for="Start" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="End" class="control-label"></label>
                        <input asp-for="End" class="form-control" />
                        <span asp-validation-for="End" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Amount" class="control-label"></label>
                        <input asp-for="Amount" class="form-control" placeholder="E.g 4000" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClientID" class="control-label"></label>
                        <select asp-for="ClientID" class="form-control custom-select" id="clientDropdown" style="width: 100%; height: auto;">
                            <option value="">Select Client</option>
                            @{
                                var sortedClients = ((IEnumerable<SelectListItem>)ViewBag.ClientID).OrderBy(x => x.Text);
                            }
                            @foreach (var client in sortedClients)
                            {
                                <option value="@client.Value">@client.Text</option>
                            }
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Desc" class="control-label"></label>
                        <textarea asp-for="Desc" class="form-control" placeholder="Enter additional project notes"></textarea>
                        <span asp-validation-for="Desc" class="text-danger"></span>
                    </div>
                </div>
                <!-- Project Address Section -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Street" class="control-label"></label>
                        <input asp-for="Street" class="form-control" placeholder="E.g 456 Fake Street" />
                        <span asp-validation-for="Street" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="City" class="control-label"></label>
                        <input asp-for="City" class="form-control" placeholder="E.g Welland" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="provinceDropdown" class="control-label">Province</label>
                        <select id="provinceDropdown" class="form-control" asp-for="Province">
                            <option value="">Select Province</option>
                            <option value="AB">AB</option>
                            <option value="BC">BC</option>
                            <option value="MB">MB</option>
                            <option value="NB">NB</option>
                            <option value="NL">NL</option>
                            <option value="NS">NS</option>
                            <option value="ON">ON</option>
                            <option value="PE">PE</option>
                            <option value="QC">QC</option>
                            <option value="SK">SK</option>
                            <option value="NT">NT</option>
                            <option value="NU">NU</option>
                            <option value="YT">YT</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Postal" class="control-label"></label>
                        <input asp-for="Postal" class="form-control" placeholder="E.g L3C 5X5" />
                        <span asp-validation-for="Postal" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <div class="form-group text-center">
                <!-- Centered Button -->
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-4">
    <!-- Centered Back to List Link -->
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <!-- Include Select2 JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- Initialize Select2 -->
    <script>
        $(document).ready(function () {
            $('#clientDropdown').select2();
        });
    </script>
}
