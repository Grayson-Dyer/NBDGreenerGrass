@model NBDGreenerGrass.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Start)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Start)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.End)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.End)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Amount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Street)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Street)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Province)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Province)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Postal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Postal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Client)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Client.City)
        </dd>
    </dl>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>Date Made</th>
                <th>Stage</th>
                <th></th>
                <th></th>
            </tr>

        </thead>
        @{
            bool anyBidApproved = ViewBag.AnyBidApproved;
        }
        <tbody>
            @foreach (var item in Model.Bids)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateMade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Stage)
                    </td>
                    <td>
                        <a asp-action="Details" asp-controller="Bids" asp-route-id="@item.ID">Details</a>
                        <a asp-action="Edit" asp-controller="Bids" asp-route-projectId="@Model.ID" asp-route-id="@item.ID">Edit</a>
                        <a asp-action="Delete" asp-controller="Bids" asp-route-id="@item.ID">Delete</a>
                    </td>
                    <td>
                        @if (item.Stage == NBDGreenerGrass.Enums.BidStage.Reviewed && !anyBidApproved)
                        {
                            <form asp-action="BidApproved" asp-controller="Bids" method="post" asp-route-id="@item.ID">
                                <input type="submit" id="clientApprovedBtn" value="Client Approved" class="btn btn-primary" />
                            </form>
                        }
                        else if (item.Stage == NBDGreenerGrass.Enums.BidStage.Unapproved && !anyBidApproved)
                        {
                            <form asp-action="BidReviewed" asp-controller="Bids" method="post" asp-route-id="@item.ID">
                                <input type="submit" id="projectAdminReviewedBtn" value="Project Admin Reviewed" class="btn btn-primary" />
                            </form>
                        }
                        else if (item.Stage == NBDGreenerGrass.Enums.BidStage.Approved)
                        {
                            <form asp-action="BidDemote" asp-controller="Bids" method="post" asp-route-id="@item.ID">
                                <input type="submit" id="projectAdminDemoteBtn" value="Unapprove" class="btn btn-primary" />
                            </form>
                        }
                    </td>
                </tr>
            }
    </table>
</div>
<div>
    <a asp-controller="Bids" asp-action="Create" asp-route-projectId="@Model.ID">Create New Bid</a>
</div>


<div>
    <a asp-action="Edit" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



