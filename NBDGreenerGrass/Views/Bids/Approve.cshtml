@model NBDGreenerGrass.Models.Bid

@{
    ViewData["Title"] = "Approve Bid";
}

<h2 class="mt-5 mb-4">Approve Bid</h2>

<div class="card">
    <div class="card-header">
        Bid Details
    </div>
    <div class="card-body">
        <form asp-action="BidApproval" asp-route-id="@Model.ID" class="needs-validation" novalidate>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="ProjectID" />
            <div class="mb-3">
                <label asp-for="DeniedClientReason" class="form-label">Denial Reason (if applicable)</label>
                <textarea asp-for="DeniedClientReason" class="form-control" rows="3"></textarea>
            </div>
            <button type="submit" class="btn btn-primary" name="action" value="Approve">Approve</button>
            <button type="submit" class="btn btn-danger" name="action" value="Deny">Deny</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>