@model NBDGreenerGrass.Models.Bid

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Bid</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Stage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Stage)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateMade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateMade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        @if (Model.Stage == NBDGreenerGrass.Enums.BidStage.Unapproved && !String.IsNullOrEmpty(Model.DeniedClientReason))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeniedClientReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeniedClientReason)
            </dd>
        }
        else if (Model.Stage == NBDGreenerGrass.Enums.BidStage.Unapproved && !String.IsNullOrEmpty(Model.DeniedManagerReason))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DeniedManagerReason)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DeniedManagerReason)
            </dd>
        }

    </dl>

    <div>
        <h4>Bid Materials</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Inventory Description</th>
                    <th>Inventory Size</th>
                    <th>Inventory Code</th>
                    <th>Inventory List Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.BidMaterials)
                {
                    <tr>
                        <td>@material.InventoryDesc</td>
                        <td>@material.InventorySize</td>
                        <td>@material.InventoryCode</td>
                        <td>@material.InventoryListPrice.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div>
        <h4>Bid Labours</h4>
        <table class="table">
            <thead>
                <tr>
                    <th>Labour Type</th>
                    <th>Labour Price</th>
                    <th>Labour Cost</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var labour in Model.BidLabours)
                {
                    <tr>
                        <td>@labour.LabourType</td>
                        <td>@labour.LabourPrice.ToString("C")</td>
                        <td>@labour.LabourCost.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
<div>
    <h4>Actions</h4>
    <a asp-action="Review" asp-route-Id="@Model.ID" asp-route-ID="@Model?.ID">Review</a>
    <a asp-action="Approve" asp-route-Id="@Model.ID" asp-route-ID="@Model?.ID">Approve</a>
</div>
<div>
    <a asp-action="Edit" asp-route-projectId="@Model.ProjectID" asp-route-id="@Model?.ID">Edit</a> |
    <a asp-action="Details" asp-controller="Project" asp-route-id="@Model.ProjectID">Back to Project Details</a>
</div>
